{
  "include": [
    "src",
    "src/**/*.ts",
    "playground/**/*.vue",
    "playground/**/*.ts",
    "*.d.ts"
  ],
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext"]
  }
}
